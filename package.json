{
  "name": "my-design-system",
  "version": "0.0.0",
  "description": "Argon design system implemented with React",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leosuncin/my-design-system.git"
  },
  "author": "Jaime Leonardo Suncin Cruz <leosuncin@gmail.com>",
  "homepage": "https://github.com/leosuncin/my-design-system#readme",
  "bugs": {
    "url": "https://github.com/leosuncin/my-design-system/issues"
  },
  "main": "dist/my-design-system.cjs.js",
  "module": "dist/my-design-system.esm.js",
  "scripts": {
    "build": "rollpkg build",
    "lint": "eslint .",
    "prepare": "husky install",
    "prepublishOnly": "npm run build",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watchAll",
    "watch": "rollpkg watch"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "React",
    "Design System"
  ],
  "peerDependencies": {
    "react": ">=16.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier-plugin-package": "^1.3.0",
    "prettier-plugin-sorted": "^2.0.0",
    "rollpkg": "^0.5.7",
    "typescript": "^4.4.3"
  },
  "types": "dist/index.d.ts",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "./node_modules/rollpkg/configs/eslint"
    ]
  },
  "jest": {
    "preset": "rollpkg"
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "prettier": "rollpkg/configs/prettier.json",
  "sideEffects": false,
  "volta": {
    "node": "14.16.1",
    "npm": "6.14.12"
  }
}
